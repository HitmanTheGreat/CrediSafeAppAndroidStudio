<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/national_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/national_id"
            android:inputType="text"
            android:maxLength="11"
            android:textColorHint="#757575"
            tools:ignore="TouchTargetSizeCheck">

        </EditText>

        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/firstname"
            android:inputType="text"
            android:maxLength="11"
            android:textColorHint="#757575"
            tools:ignore="TouchTargetSizeCheck">

        </EditText>
        <EditText
            android:id="@+id/forenames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/forenames"
            android:inputType="text"
            android:maxLength="11"
            android:textColorHint="#757575"
            tools:ignore="TouchTargetSizeCheck">

        </EditText>

        <EditText
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/dob"
            android:inputType="date"
            android:maxLength="11"
            android:textColorHint="#757575"
            tools:ignore="TouchTargetSizeCheck">

        </EditText>

        <Spinner
            android:id="@+id/spinner_gender"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/gender_description"
            android:minHeight="48dp">

        </Spinner>
        <Spinner
            android:id="@+id/spinner_marital_status"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/gender_description"
            android:minHeight="48dp">

        </Spinner>


        <EditText
            android:id="@+id/surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/surname"
            android:inputType="text"
            android:maxLength="11"
            android:textColorHint="#757575"
            tools:ignore="TouchTargetSizeCheck">

        </EditText>

        <EditText
            android:id="@+id/reg_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/pin"
            android:inputType="text"
            android:maxLength="4"
            android:textColorHint="#757575"
            tools:ignore="TouchTargetSizeCheck">

        </EditText>
        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/address"
            android:inputType="text"
            android:maxLength="40"
            android:textColorHint="#757575"
            tools:ignore="TouchTargetSizeCheck">

        </EditText>

        <Button
            android:id="@+id/sign_up_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signup" />

        <Button
            android:id="@+id/to_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_in" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>